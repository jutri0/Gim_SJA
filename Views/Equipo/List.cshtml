@{
    ViewData["Title"] = "Dashboard";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description" content="">
    <meta name="author" content="Tooplate">

    <title>Mini Finance Dashboard Template</title>

    <!-- CSS FILES -->
    <link rel="preconnect" href="https://fonts.googleapis.com">

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <link href="https://fonts.googleapis.com/css2?family=Unbounded:wght@300;300;600&display=swap" rel="stylesheet">

    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/css/bootstrap-icons.css" rel="stylesheet">

    <link href="~/css/apexcharts.css" rel="stylesheet">

    <link href="~/css/tooplate-mini-finance.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">

</head>

<body>
    <div class="container-fluid">

        <main class="col-md-12 col-lg-12 ">
            <div class="title-group mb-3">
                <h1 class="h2 mb-0">Equipos</h1>
            </div>

            <div class="d-flex">

                <a class="navbar-brand" href="@Url.Action("Index", "Equipo")">
                    Ingresar Nuevo Equipo
                </a>
            </div>

            <div class="row my-4">
                <div class="custom-block custom-block-exchange">
                    <h5 class="mb-4">Tabla de Equipos</h5>

                    <table class="table table-bordered" id="equiposTable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nombre del Equipo</th>
                                <th>Cantidad</th>
                                <th>Cantidad Máxima</th>
                                <th>Observaciones</th>
                                <th>Foto del Equipo</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- JAVASCRIPT FILES -->
            <script src="~/js/jquery.min.js"></script>
            <script src="~/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/apexcharts.min.js"></script>
            <script src="~/js/custom.js"></script>
        </main>
    </div>

    <!-- JAVASCRIPT FILES -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/apexcharts.min.js"></script>
    <script src="~/js/custom.js"></script>

    <script>
        $(document).ready(function () {
            $.ajax({
                url: '@Url.Action("GetEquipos", "Equipo")',
                type: 'GET',
                dataType: 'json',
                success: function (response) {
                    var tbody = $('#equiposTable tbody');
                    tbody.empty(); // Limpia cualquier fila existente

                    if (response.dataJson && response.dataJson.length > 0) {
                        $.each(response.dataJson, function (index, equipo) {
                            var row = '<tr>' +
                                '<td>' + equipo.idEquipoPk + '</td>' +
                                '<td>' + equipo.nombre + '</td>' +
                                '<td>' + equipo.cantidad + '</td>' +
                                '<td>' + equipo.cantidadMax + '</td>' +
                                '<td>' + equipo.observaciones + '</td>' +
                                '<td>' + (equipo.fotoEquipo ? '<img src="data:image/png;base64,' + equipo.fotoEquipo + '" alt="Foto" style="width: 50px; height: 50px;"/>' : 'No disponible') + '</td>' +
                                '</tr>';
                            tbody.append(row);
                        });
                    } else {
                        var row = '<tr><td colspan="6">No se encontraron Equipos.</td></tr>';
                        tbody.append(row);
                    }
                },
                error: function (xhr, status, error) {
                    console.error("Error al obtener los datos: ", error);
                    var row = '<tr><td colspan="6">Error al obtener los datos.</td></tr>';
                    $('#equiposTable tbody').append(row);
                }
            });
        });
    </script>
</body>
</html>